

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @model Trollo.board
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrapcss")
    @Scripts.Render("~/bundles/modernizr")   
</head>
<body>
     <table><tr>
        <td style= "vertical-align: top">
            <div class="container-fluid">
                <div class = "row-fluid">
                    <div class = "span3">
                        <div class = "well sidebar-nav">
                            <ul class="list-group"> 
                              <li class="list-group-item">@Html.ActionLink("User", "../User/Create", null, new { })</li>
                              <li class="list-group-item">@Html.ActionLink("Board", "../Board/Create", null, new { })</li>
                              <li class="list-group-item">@Html.ActionLink("List", "../List/Create", null, new { })</li>
                              <li class="list-group-item">@Html.ActionLink("Task", "../Task/Create", null, new { })</li>
                            </ul>
                        </div>
                     </div>
                </div>
            </div>

          </td>
         <td></td>
        
         <td style= "vertical-align: top">
            <ul class="nav nav-tabs">                
                <li>@Html.ActionLink("Create", "../Board/Create", null, new { })</li>
                <li>@Html.ActionLink("Manipulation", "../Board/Index", null, new { })</li>
                <li>@Html.ActionLink("Chart1", "../Board/Chart1", null, new { })</li>
                <li>@Html.ActionLink("Chart2", "../Board/Chart2", null, new { })</li>
            </ul>

         <table><tr>
             <td><BR>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        

        <div class="editor-label">
            @Html.LabelFor(model => model.idBoard)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idBoard)
            @Html.ValidationMessageFor(model => model.idBoard)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.creationDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.creationDate)
            @Html.ValidationMessageFor(model => model.creationDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.boardOwner, "user")
        </div>
        <div class="editor-field">
            @Html.DropDownList("boardOwner", String.Empty)
            @Html.ValidationMessageFor(model => model.boardOwner)
        </div>
        <br />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    

}
    </td></tr></table>
    
    </td>
    
    </tr>
    </table>
    
    
    
    </body>
    </html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
