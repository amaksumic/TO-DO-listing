    <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body>

    <div class="container-fluid">
        <div class = "row-fluid">
            
            
            <div class = "span3">

                <div class = "well sidebar-nav">


                    <div class="dropdown">
                        <button class="btn dropdown-toggle sr-only" type="button" id="dropdownMenu1" data-toggle="dropdown">
                              @MvcTrello.Resources.Lang
                          <span class="caret"></span>
                        </button>
                   <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                     <li role="presentation"><a role="menuitem" tabindex="-1">@Html.ActionLink("ENG", "SetCulture", new { controller = "Home", culture = "en" })  </a></li>
                     <li role="presentation"><a role="menuitem" tabindex="-1">@Html.ActionLink("BS", "SetCulture", new { controller = "Home", culture = "bs" })</a></li>
   
                     </ul>
                    </div>




                    <ul class = "nav nav-pills nav-stacked">
                                           


                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "active" })</li>
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        @RenderSection("scripts", required: false)
                        
                    </ul>
                    @Html.ActionLink("Register >>", "../User/Registracija", null, new { @class = "btn btn-success btn-lg btn-block"  })
                </div>

            </div>
            
            
            <!-- asdasdasdad -->
            <script type="text/javascript">
                $(function () {
                    $('.dropdown-toggle').dropdown('toggle');
                });
            </script>



            <div class = "span9">
                @RenderSection("featured", required : false)
                <div class  = "row-fluid">
                    @RenderBody()
                </div>
            </div>

        </div>



  


       
        @Styles.Render("~/bundles/jquery")
        @Styles.Render("~/bundles/bootstrapjs")

    <script src="~/Scripts/jquery-1.8.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>